<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@200&display=swap" rel="stylesheet">
    

    <link rel='stylesheet' href='/stylesheets/flights.css' />
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mongoose Flights</title>
</head>
<body>
    <img id="headimg" src="https://i.imgur.com/sn7gMyK.png">
    <img id="plane" src="https://i.imgur.com/AjpEum7.png">
    <h1>ALL FLIGHTS</h1>
    <section>
    <form action="/" method="GET">
        <table>
            <thead>
                <tr>
                    <th>Airline</th>
                    <th>Airport</th>
                    <th>Flight #</th>
                    <th>Departs</th>    
                </tr>
            </thead>
            <tbody>
                <% flights.forEach(function(f) { %>
                    <tr>
                        <td><%= f.airline %></td>
                        <td><%= f.airport %></td>
                        <td><%= f.flightNo %></td>
                        <td><%= f.departs %></td> 
                        <td><a id="details" href="flights/<%= f._id %>">Detail</a></td>        
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </section>
        <a id="home" href="/">Home</a>
        <a id="new" href="flights/new">New Flights</a>
     </form>        
</body>